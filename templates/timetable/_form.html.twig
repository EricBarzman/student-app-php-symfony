                    <input type="text" style="width: 90px;" id="{{ hour }}" name="Saturday_{{ hour }}" value="{{ timetable['Saturday'][hour] }}" >
                </td>
                {% endfor %}
            </tr>
            <tr class="col-xs">
                <th>Sunday</th>
                {% for hour in timetable['Sunday']|keys %}
                <td class="col-xs">
                    <input type="text" style="width: 90px;" id="{{ hour }}" name="Sunday_{{ hour }}" value="{{ timetable['Sunday'][hour] }}" >
                </td>
                {% endfor %}
            </tr>
            
        </table>
    </div>
    
    <div class="col-5 mt-5 container">
        <div class="d-flex flex-column justify-content-around">
            <button class="btn btn-primary m-3" type="submit" class="btn">Confirm</button>
        </div>
    </div>
</form>