            {% endfor %} #}

            <tr class="col-xs">
                <th>Monday</th>
                {% for hour in timetable['Monday']|keys %}
                <td class="col-xs">
                    <input type="text" style="width: 90px;" id="{{ hour }}" name="Monday_{{ hour }}" value="{{ timetable['Monday'][hour] }}" >
                </td>
                {% endfor %}
            </tr>
            <tr class="col-xs">
                <th>Tuesday</th>
                {% for hour in timetable['Tuesday']|keys %}
                <td class="col-xs">
                    <input type="text" style="width: 90px;" id="{{ hour }}" name="Tuesday_{{ hour }}" value="{{ timetable['Tuesday'][hour] }}" >
                </td>
                {% endfor %}
            </tr>
            <tr class="col-xs">
                <th>Wednesday</th>
                {% for hour in timetable['Wednesday']|keys %}
                <td class="col-xs">
                    <input type="text" style="width: 90px;" id="{{ hour }}" name="Wednesday_{{ hour }}" value="{{ timetable['Wednesday'][hour] }}" >
                </td>
                {% endfor %}
            </tr>
            <tr class="col-xs">
                <th>Thursday</th>
                {% for hour in timetable['Thursday']|keys %}
                <td class="col-xs">
                    <input type="text" style="width: 90px;" id="{{ hour }}" name="Thursday_{{ hour }}" value="{{ timetable['Thursday'][hour] }}" >
                </td>
                {% endfor %}
            </tr>
            <tr class="col-xs">
                <th>Friday</th>
                {% for hour in timetable['Friday']|keys %}
                <td class="col-xs">
                    <input type="text" style="width: 90px;" id="{{ hour }}" name="Friday_{{ hour }}" value="{{ timetable['Friday'][hour] }}" >
                </td>
                {% endfor %}
            </tr>
            <tr class="col-xs">
                <th>Saturday</th>
                {% for hour in timetable['Saturday']|keys %}
